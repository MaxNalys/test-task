<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#111111"
    tools:context=".ui.fragments.MainFragment">

    <!-- Контейнер для списку персонажів -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/character_container"
        android:name="com.example.testtask.ui.fragments.CharacterListFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.33" />

    <!-- Контейнер для списку будинків -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/house_container"
        android:name="com.example.testtask.ui.fragments.HouseListFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/character_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.33" />

    <!-- Контейнер для списку заклять -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/spell_container"
        android:name="com.example.testtask.ui.fragments.SpellListFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/house_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.33" />

</androidx.constraintlayout.widget.ConstraintLayout>
